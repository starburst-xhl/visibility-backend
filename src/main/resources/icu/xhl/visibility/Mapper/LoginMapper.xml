<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="icu.xhl.visibility.Mapper.LoginMapper">
    <select id="selectByUsername" resultType="java.lang.String">
        select password from users where username = #{username} and available = 1
    </select>
    <select id="selectRoleByUsername" resultType="java.lang.String">
        select role from users where username = #{username} and available = 1
    </select>
</mapper>